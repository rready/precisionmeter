@model IEnumerable<Meter.Models.vw_batchMeterReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meter Report</h2>

<div class="container">
    <div>
        <button id="showFiles" class="btn btn-danger" style="margin-bottom:2px">Email Selected File</button>
    </div>

    <div class="dropdown">
        @Html.DropDownList("selectedFile", ViewBag.Files as SelectList, "Select File to Email", new { @class = "form-control" })
    </div>
    <br />
    <div style="width:100%; margin:0 auto;">
        <table id="meterReportGrid" class="table table-striped table-bordered table-responsive nowrap display" width="100%" cellspacing="0" ; style="width:100%">
            <thead>
                <tr>
                    <th colspan="2">Meter Number</th>
                    <th colspan="1">MFG</th>
                    <th colspan="3">As Found Proof %</th>
                    <th colspan="3">As Left Proof %</th>
                    <th colspan="1">Proved</th>
                    <th colspan="2">Reason</th>
                </tr>
                <tr>
                    <th>CO#</th>
                    <th>MFG</th>
                    <th>Size</th>
                    <th>OPEN</th>
                    <th>CHECK</th>
                    <th>ERROR</th>
                    <th>OPEN</th>
                    <th>CHECK</th>
                    <th>ERROR</th>
                    <th>Size </th>
                    <th>Date By</th>
                    <th>For Test</th>
                    <th>Irat</th>
                    <th>Irbt</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

